<MainScreen>:
    #: import time __main__.time

    name: 'main'
    FloatLayout:
        size_hint: None, None


    Slider:
        id: slider
        min: 0
        max: 100
        step: 1
        orientation: 'horizontal'

    Label:
        text: str(slider.value)
        font_size:30
        y: root.height * 0.1

    DPEAButton:
        id: test_button
        text: 'what are we?'
        size: 100, 100
        y: root.height * 0.3
        color: 0, 1, 0, 1
        on_press: root.pressed()

    SelfUpdatingLabel:
        id: time_label
        size_hint: None, None
        font_size: 30
        update_property: time.now
        update_property_parameters: None
        center_x: root.width * 0.5
        center_y: root.height * 0.45
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    DPEAButton:
        id:OnOff
        text: 'on'
        size: 100, 100
        y: root.height * 0.535
        color: 0.5, 1, 0, 1
        on_press: root.pressed1()
        on_press: root.animate()

    DPEAButton:
        id:Counter
        cow: 0
        text: "0"
        size: 100, 100
        y: root.height * 0.1
        color: 0.5, 0.9, 0.4, 1
        on_press: root.pressed2()

    DPEAButton:
        id:MotorTime
        text: "Motor"
        size: 100, 100
        y: root.height * 0.735
        color: 0.5, 0.9, 0.4, 1
        on_press: root.pressed3()

    Label:
        id:MotorLabel
        text: "motor on"
        size_hint: None, None
        font_size: 10
        x: root.width * 0.1
        y: root.height * 0.735
        color: 0.5, 0.9, 0.4, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0.4, 0.6, 0.2, 0.7

    Button:
        id:ImageButton
        text: "Click me!"
        background_normal: 'bird.jpeg'
        background_down: 'bird.jpeg'
        size_hint: .1, .1
        x: root.width * .9
        y: root.height * .9
        on_press: root.pressed4()

    DPEAButton:
        id:Shutdown
        text: "Shutdown"
        size: 100, 100
        x: root.width * 0.33456
        color: 0.5, 0.9, 0.4, 1
        on_press: root.shutdown()

    Label:
        id:Location
        text: "0,0"
        font_size: 25
        x: root.width * 0.5
        y: root.height * 0.3
        color: 0.2, 0.8, 0.9, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0.4, 0.3, 0.2, 0.7




